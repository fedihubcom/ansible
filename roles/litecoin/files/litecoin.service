[Unit]
After=syslog.target network.target
Description=Litecoin daemon

[Service]
ExecStart=/usr/local/bin/litecoind
Group=litecoin
MemoryDenyWriteExecute=true
NoNewPrivileges=true
PrivateDevices=true
PrivateTmp=true
ProtectSystem=full
Restart=on-failure
RestartSec=1
StandardError=syslog
StandardOutput=syslog
SyslogIdentifier=litecoin
Type=simple
User=litecoin
WorkingDirectory=/

[Install]
WantedBy=multi-user.target
